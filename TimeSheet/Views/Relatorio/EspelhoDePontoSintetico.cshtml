@model TimeSheet.ViewModel.ViewModelRelatorio


@{
    Layout = "";
}
<!DOCTYPE html>
<html>
<head>
    <title>Espelho de Ponto</title>
    <meta http-equiv="Content-Type" content="text/html; charset=iso-8859-1">
    <style type="text/css">
        * {
            font-family: Arial;
        }

        body {
            width: 100%;
            margin: 0 auto;
        }

        table {
            width: 100%;
            margin: 5px auto;
            border-collapse: collapse;
        }

        .table th, .table td {
            border: #000 1px solid;
            vertical-align: middle;
            padding: 3px 5px 3px 5px;
        }

        .text-left {
            text-align: left;
            font-size: 11px;
        }

        .text-right {
            text-align: right;
            font-size: 11px;
        }

        .text-center {
            text-align: center;
            font-size: 11px;
        }

        table {
            page-break-inside: auto
        }

        tr {
            page-break-inside: avoid;
            page-break-after: auto
        }

        td {
            page-break-inside: avoid;
            page-break-after: auto;
        }

        thead {
            display: table-header-group
        }

        tfoot {
            display: table-footer-group;
        }

        tbody {
            display: table-row-group;
        }
    </style>
</head>
<body>
    Data de emisão:  @DateTime.Now.ToString("dd/MM/yyyy")
    <table style="height:50px; text-align: center; font-size:20px;" class="table">
        <tr>
            <td><b>ESPELHO DE PONTO</b></td>
            <td style="width:30px;"><b>@Model.marcacao.AnoMesDescricao</b></td>
        </tr>
    </table>

    <table class="table">
        <tbody>
            <tr>
                <td class="text-left" style="font-size:14px;">
                    <b>Matrícula: @Model.user.SubjectId</b>
                </td>
                <td class="text-left" style="font-size:14px; width:650px;">
                    <b>Nome:  @Model.user.Nome</b>
                </td>
            </tr>
            <tr>
                <td class="text-left" colspan="2" style="font-size:14px;">
                    <b>Coordenação: @Model.user.Gerencia</b>
                </td>
            </tr>
        </tbody>
    </table>
    <table class="table">
        <thead>
            <tr>
                <th colspan="6"><b>Lançamentos</b></th>
            </tr>

            <tr>
                <th class="text-center">Data Lançamento</th>
                <th class="text-center">Horas Execedentes</th>
                <th class="text-center">Atrasos</th>
                <th class="text-center">Abonos</th>
                <th class="text-center">Total Horas</th>
                <th class="text-center">Divergência (quantidade)</th>
            </tr>

        </thead>
        <tbody>
            @if (Model.Fechamento != null)
            {
            <tr>
                <th scope="row">@Model.Fechamento.Datafechamento.ToDateProtheusReverseformate()</th>
                <td>@Model.Fechamento.TotalHoraExedente</td>
                <td>@Model.Fechamento.TotalAtraso</td>
                <td>@Model.Fechamento.TotalAbono</td>
                <td>@Model.Fechamento.TotalHora</td>
                <td>@Model.Fechamento.Divergencia</td>
            </tr>
            }
        </tbody>
    </table>
</body>
</html>
